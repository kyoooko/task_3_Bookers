<head>
  <style>
  .books_show:visited {
  color: #666;
  }
  .books_show:hover{
  color: #337ab7;
  background-color:#000;
  }
  /* いいね・コメント機能 */
  .comment{
    list-style:none;
  }
  .glyphicon-heart,.glyphicon-heart-empty{
    color:#666;
  }
  </style>
</head>
<body>
  <div class="col-xs-9">
          <h2>Books</h2>
          
          <table class="table table-hover table-inverse">
            <thead>
              <tr> 
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% books.each do |book| %>
                <tr class="book_<%= book.id %>">
                  <%= render 'books/book', book: book %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
</body>  