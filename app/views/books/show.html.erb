<head>
  <style>
  /* 本ページ */
  .book_title,.book_body{
  margin-bottom: 10px;
  }
  .books_show:visited,.user_name:visited{
  color:#666;
  }
  .books_show:hover,.user_name:hover{
  color: #337ab7;
  background-color:#000;
  }
  .btn-danger{
  color:#666;
  }
  .comment{
    list-style:none;
  }
  </style>
</head>

<body>
    <div class="container main-container">
      <p id="notice"></p>

      <div class="row">
        <!-- 左側 -->
        <div class="col-xs-3">
          <h2>User info</h2>
          <%= attachment_image_tag @book.user, :profile_image, size: "100x100",format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>

          <table class="table">
            <tbody>
              <tr></tr> 
              <tr>
                <th>name</th>
                <th><%= @book.user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @book.user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <% if @book.user.id == current_user.id %>
              <%= link_to "",edit_user_path(@book.user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
            <% else %>     
               <%= link_to "",user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
            <% end %>
          </div>  

          <h2>New book</h2>
          <%= form_for(@create_book) do |f| %>
           <div class="field row">
              <%= f.label :title %><br />
              <%= f.text_field :title, autofocus: true, class:"col-xs-12 book_title",id:"book_title" %>
            </div>

            <div class="field row">
              <%= f.label :body,"Opinion" %><br />
              <%= f.text_area :body, autofocus: true,class:"col-xs-12 book_body",id:"book_body" %>
           </div>       

            <div class="actions row">
              <%= f.submit "Create Book",class:"btn btn-primary col-xs-12" ,data: { disable_with: "Sign up" } %>
            </div>
          <% end %>
        </div>

     <%# 右側 %>
        <div class="col-xs-9">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <div>
                    <%=link_to user_path(@book.user.id) do %>
                      <%= attachment_image_tag @book.user, :profile_image, size: "100x100", format: 'jpeg', class: " profile-img", fallback: "no_image.jpg", size:'50x50' %>
                    <% end %>
                  </div>
                  <div>
                    <%=link_to @book.user.name, user_path(@book.user.id), class: "text-muted" %>
                  </div> 
                </td>
                <td> <%= link_to book_path(@book.id),class:"books_show" do %><%= @book.title %><% end %></td>
                <td><%= @book.body %></td>

                <% if @book.user == current_user %>
                  <td>
                    <%= link_to "Edit",edit_book_path(@book.id),class:"btn-sm btn-success" %>
                  </td>
                  <td>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn-sm btn-danger",data:{confirm:"本当に消しますか？"} %>
                  </td>
                <% end %>

                <td><span class="glyphicon glyphicon-heart" aria-hidden="true">1</span></td>
                <td>コメント数：<%= @book.book_comments.count %></td>
              </tr>
            </tbody>
          </table>

          <%# コメント一覧 %>
          <ul>
            <% @book.book_comments.each do |book_comment| %>
                <li class="comment">
                    <div>
                      <%=link_to user_path(@book.user.id) do %>
                        <%= attachment_image_tag @book.user, :profile_image, size: "100x100", format: 'jpeg', class: " profile-img", fallback: "no_image.jpg", size:'50x50' %>
                      <% end %>
                    </div>
                    <div>
                      <%=link_to @book.user.name, user_path(@book.user.id), class: "text-muted" %>
                    </div> 
                    <div class="comment-entry"><%= book_comment.comment %></div>
                    <% if book_comment.user == current_user%>
                      <div>
                        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
                      </div>
                    <% end %>   
                    <div class="comment-author clearfix">
                        <span class="comment-meta">
                        </span>
                    </div>                
                </li>
              <% end %>
          </ul>
          
          <%# コメント入力 %>
          <%= form_for [@book, @book_comment] do |f| %>
            <div class="row">
                <div class="col-sm-12">
                    <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
                </div>
            </div>
            <%= f.submit "送信", class: "btn btn-default  pull-right" %>
          <% end %>

        </div>
      </div> 
    </div>
</body>

