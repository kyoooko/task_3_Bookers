<head>
  <style>
    /* 本ページ */
      .book_title,.book_opinion{
    margin-bottom: 10px;
  }
  </style>
</head>

<body>
  <main>
    <div class="container main-container">
      <p id="notice"></p>

      <div class="row">
        <!-- 左側 -->
        <div class="col-xs-3">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, size: "100x100",format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>

          <table class="table">
            <tbody>
              <tr></tr> 
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <%= link_to "",edit_user_path(@user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          </div>

          <h2>New book</h2>
          <%= form_for(@book) do |f| %>
            <div class="field">
              <%= f.label :title %><br />
              <%= f.text_field :title, autofocus: true, class:"col-xs-12 book_title",id:"book_title" %>
            </div>

            <div class="field">
              <%= f.label :opinion %><br />
              <%= f.text_area :opinion, autofocus: true,class:"col-xs-12 book_opinion",id:"book_opinion" %>
           </div>       

            <div class="actions row">
              <%= f.submit "Create Book",class:"btn btn-primary col-xs-12" ,data: { disable_with: "Sign up" } %>
            </div>
          <% end %>
        </div>

     <%# 右側 %>
        <div class="col-xs-9">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= attachment_image_tag @book.user, :profile_image, size: "50x50", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
                </td>
                
                <td>
                 <%= link_to book_path(@book.id) do %><%= @book.title %><% end %>
                </td>
                
                <td>
                  <%= @book.opinion %>
                </td>
                <td>
                <%= link_to "Edit",edit_book_path(@book.id),class:"btn-sm btn-success" %>
                </td>

                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Destroy", books_path, method: :delete, class:"btn-sm btn-danger" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div> 
    </div>
  </main>
</body>

