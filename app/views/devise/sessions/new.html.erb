 <head>
  <style>
    /* 本ページ */
    .field,.actions{
      margin-bottom: 10px;
    }
    a{
      color:#666;
    }
    a:hover{
    background-color:#000;
    }
  </style>
</head>

<body>
  <div class="container main-container">
    <p id="notice"></p>
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"name",id:"name" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"password", id:"password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me,id:"remember_me" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-primary",data: { disable_with: "Sign up" } %>
      </div> 
    <% end %>
  
    <%= render "devise/shared/links" %>
  </div>
</body>


