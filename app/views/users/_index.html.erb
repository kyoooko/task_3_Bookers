<header>
 <style>
  /* 本ページ */
  .users_show:visited {
    color: #666;
    }
  .users_show:hover{
  color: #337ab7;
  background-color:#000;
  }
  </style>
</head>

<body>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% users.each do |user| %>
        <tr>
          <td>
          <%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
          </td>
          <td><%=user.name %></td>
          <td>フォロー数：<%= user.followings.count %></td>
          <td>フォロワー数：<%= user.followers.count %></td>
          <td><%= render 'relationships/follow_button', user: user %></td>
          <td><%=link_to"Show", user_path(user.id),class:"users_show" %></td>
        </tr>
        <% end %>
    </tbody>
  </table> 
</body>