<header>
 <style>
    /* 本ページ */
    .field{
      margin-bottom: 10px;
    }
  </style>
</head>

<body>
    <div class="container main-container">
      <p id="notice"></p>
      <h2>User info</h2>

      <%= form_for(@user) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"name",id:"user_name" %>
          </div>    

          <div class="firld">
            <%= f.label :image %><br />
            <%= f.attachment_field :profile_image,class: "user-edit-form" %>
          </div>         

          <div class="field">
            <%= f.label :introduction %><br />
            <%= f.text_area :introduction, autofocus: true,class:"introduction" %>
          </div>    

         <%= f.submit "Update User",data: { disable_with: "Sign up" } %>

      <% end %>
</body>