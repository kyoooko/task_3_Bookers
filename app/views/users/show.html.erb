<header>
 <style>
    /* 本ページ */
  .book_title,.book_opinion{
    margin-bottom: 10px;
  }
  a{
      color:#666;
    }
  a:hover{
  background-color:#000;
  }
  </style>
</head>

<body>
    <div class="container main-container">
      <p id="notice"></p>

      <div class="row">
        <!-- 左側 -->
        <div class="col-xs-3">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, size: "100x100",format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>

          <table class="table">
            <tbody>
              <tr></tr> 
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <% if @user.id == current_user.id %>
              <%= link_to "",edit_user_path(@user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
            <% else %>     
               <%= link_to "",user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
            <% end %>
          </div>  

          <h2>New book</h2>
          <%= form_for(@book) do |f| %>
            <div class="field">
              <%= f.label :title %><br />
              <%= f.text_field :title, autofocus: true, class:"col-xs-12 book_title",id:"book_title" %>
            </div>

            <div class="field">
              <%= f.label :opinion %><br />
              <%= f.text_area :opinion, autofocus: true,class:"col-xs-12 book_opinion",id:"book_body" %>
           </div>       

            <div class="actions row">
              <%= f.submit "Create Book",class:"btn btn-primary col-xs-12" ,data: { disable_with: "Sign up" } %>
            </div>
          <% end %>
        </div>
      
        <!-- 右側 -->
        <div class="col-xs-9">
          <h2>Books</h2>

          <table class="table table-hover table-inverse">
            <thead>
              <tr> 
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                  <%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
                  </td>
                  <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
                  <td><%= book.opinion %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>    
    </div>
</body>


        
            
          
